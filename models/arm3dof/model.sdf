<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="arm3dof">
    <static>false</static>

    <!-- Base link -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>

      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.3 0.3 0.1</size>
          </box>
        </geometry>
      </collision>

      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.3 0.3 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 1 1</ambient>
        </material>
      </visual>

      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx><iyy>0.01</iyy><izz>0.01</izz>
          <ixy>0.0</ixy><ixz>0.0</ixz><iyz>0.0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Shoulder link -->
    <link name="shoulder_link">
      <pose>0 0 0.1 0 0 0</pose>

      <collision name="shoulder_collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.4</size>
          </box>
        </geometry>
      </collision>

      <visual name="shoulder_visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.4</size>
          </box>
        </geometry>
        <material>
          <ambient>0 1 0 1</ambient>
        </material>
      </visual>

      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.005</ixx><iyy>0.005</iyy><izz>0.005</izz>
          <ixy>0.0</ixy><ixz>0.0</ixz><iyz>0.0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Elbow link -->
    <link name="elbow_link">
      <pose>0 0 0.5 0 0 0</pose>

      <collision name="elbow_collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.3</size>
          </box>
        </geometry>
      </collision>

      <visual name="elbow_visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>1 0 0 1</ambient>
        </material>
      </visual>

      <inertial>
        <mass>0.3</mass>
        <inertia>
          <ixx>0.003</ixx><iyy>0.003</iyy><izz>0.003</izz>
          <ixy>0.0</ixy><ixz>0.0</ixz><iyz>0.0</iyz>
        </inertia>
      </inertial>
    </link>

    <!-- Joint: base → shoulder -->
    <joint name="j1_base_yaw" type="revolute">
      <parent>base_link</parent>
      <child>shoulder_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14</lower>
          <upper>3.14</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>

    <!-- Joint: shoulder → elbow -->
    <joint name="j2_shoulder" type="revolute">
      <parent>shoulder_link</parent>
      <child>elbow_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <lower>-1.57</lower>
          <upper>1.57</upper>
        </limit>
        <dynamics>
          <damping>0.05</damping>
        </dynamics>
      </axis>
    </joint>
<!-- ROS 2 joint state publisher -->
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
        <namespace>/arm</namespace>
      </ros>
      <update_rate>50</update_rate>
    </plugin>

    <!-- ROS 2 joint position controller -->
    <plugin name="joint_position_controller" filename="libgazebo_ros_joint_position_controller.so">
      <ros>
        <namespace>/arm</namespace>
      </ros>
      <joints>
        <joint>j1_base_yaw</joint>
        <joint>j2_shoulder</joint>
        <joint>j3_elbow</joint>
      </joints>
    </plugin>
  </model>
</sdf>


